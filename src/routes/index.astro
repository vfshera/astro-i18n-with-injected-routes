---
import { getLangFromUrl, useTranslation } from "@/i18n";
import Trans from "@/i18n/Trans.astro";
import Layout from "@/layouts/Layout.astro";

const lang = getLangFromUrl(Astro.url);

const t = await useTranslation(lang);
---

<Layout title="Welcome to Astro.">
  <div class="text-center flex flex-col gap-5">
    <h1 class="text-6xl">{t.welcome.header}</h1>
    <p class="instructions">
      {t.welcome.subhead}
    </p>
    <p>
      <Trans translation={t.welcome.text_with_tags}>
        Hi, <br /> Welcome Home!
      </Trans>
    </p>

    <p>
      <Trans translation={t.welcome.interpolate}>
        How <strong style="color: red;">Great is this</strong> text in the line <a
          href="#">Find out</a
        >
      </Trans>
    </p>
  </div>
</Layout>
